# open terminal
alt - return: /Applications/kitty.app/Contents/MacOS/kitty \
              --directory=$HOME --single-instance

# focus window
alt - h: yabai -m window --focus west
alt - j: yabai -m window --focus south
alt - k: yabai -m window --focus north
alt - l: yabai -m window --focus east

alt - 0x2F: yabai -m window --focus above
alt - 0x2B: yabai -m window --focus below

shift + alt - 0x2F: yabai -m window --focus next
shift + alt - 0x2B: yabai -m window --focus prev

# swap window
cmd + alt - h: yabai -m window --swap west
cmd + alt - j: yabai -m window --swap south
cmd + alt - k: yabai -m window --swap north
cmd + alt - l: yabai -m window --swap east

# permute window
cmd + alt - m: yabai -m space --rotate 90
cmd + alt - u: yabai -m space --mirror y-axis
cmd + alt - o: yabai -m space --mirror x-axis

# toggle split types
cmd + alt - i: yabai -m window --toggle split

# float / unfloat window and position on screen
cmd + alt - x: yabai -m window --toggle zoom-parent
cmd + alt - z: yabai -m window --toggle zoom-fullscreen

cmd + alt - c: yabai -m window --toggle float; \
               yabai -m window --grid 4:4:1:1:2:2

cmd + alt - a: yabai -m window --toggle float; \
               yabai -m window --grid 1:2:0:0:1:1
cmd + alt - s: yabai -m window --toggle float; \
               yabai -m window --grid 2:1:0:1:1:1
cmd + alt - w: yabai -m window --toggle float; \
               yabai -m window --grid 2:1:1:0:1:1
cmd + alt - d: yabai -m window --toggle float; \
               yabai -m window --grid 1:2:1:0:1:1

# change layout of space
alt - b: yabai -m space --layout bsp
alt - v: yabai -m space --layout float

# set insertion point in focused window
alt - n: yabai -m window --insert above

alt - a: yabai -m window --insert west
alt - s: yabai -m window --insert south
alt - w: yabai -m window --insert north
alt - d: yabai -m window --insert east

# move window
ctrl + alt - h: yabai -m window --warp west
ctrl + alt - j: yabai -m window --warp south
ctrl + alt - k: yabai -m window --warp north
ctrl + alt - l: yabai -m window --warp east

# absorb window into stack
shift + ctrl + alt - h: yabai -m window --insert above; \
                        yabai -m window --focus west; \
                        yabai -m window --warp east
shift + ctrl + alt - j: yabai -m window --insert above; \
                        yabai -m window --focus south; \
                        yabai -m window --warp north
shift + ctrl + alt - k: yabai -m window --insert above; \
                        yabai -m window --focus north; \
                        yabai -m window --warp south
shift + ctrl + alt - l: yabai -m window --insert above; \
                        yabai -m window --focus east; \
                        yabai -m window --warp west

# focus space
ctrl - 0x2F: yabai -m space --focus next
ctrl - 0x2B: yabai -m space --focus prev

ctrl - 0x2C: yabai -m space --focus recent

# send window to space and follow focus
shift + ctrl - 1: yabai -m window --space  1; yabai -m space --focus 1
shift + ctrl - 2: yabai -m window --space  2; yabai -m space --focus 2
shift + ctrl - 3: yabai -m window --space  3; yabai -m space --focus 3
shift + ctrl - 4: yabai -m window --space  4; yabai -m space --focus 4
shift + ctrl - 5: yabai -m window --space  5; yabai -m space --focus 5
shift + ctrl - 6: yabai -m window --space  6; yabai -m space --focus 6
shift + ctrl - 7: yabai -m window --space  7; yabai -m space --focus 7
shift + ctrl - 8: yabai -m window --space  8; yabai -m space --focus 8

shift + ctrl - 0x2F: yabai -m window --space next; yabai -m space --focus next
shift + ctrl - 0x2B: yabai -m window --space prev; yabai -m space --focus prev

shift + ctrl - 0x2C: yabai -m window --space recent; \
                     yabai -m space --focus recent

# send window to display and follow focus
shift + fn - 1: yabai -m window --display 1; yabai -m display --focus 1
shift + fn - 2: yabai -m window --display 2; yabai -m display --focus 2

shift + fn - 0x2F: yabai -m window --display next; \
                   yabai -m display --focus next
shift + fn - 0x2B: yabai -m window --display prev; \
                   yabai -m display --focus prev

shift + fn - 0x2C: yabai -m window --display recent; \
                   yabai -m display --focus recent

# increase window size
ctrl + cmd + alt - h: yabai -m window --resize left:-84:0
ctrl + cmd + alt - j: yabai -m window --resize bottom:0:84
ctrl + cmd + alt - k: yabai -m window --resize top:0:-84
ctrl + cmd + alt - l: yabai -m window --resize right:84:0

# decrease window size
shift + ctrl + cmd + alt - h: yabai -m window --resize left:84:0
shift + ctrl + cmd + alt - j: yabai -m window --resize bottom:0:-84
shift + ctrl + cmd + alt - k: yabai -m window --resize top:0:84
shift + ctrl + cmd + alt - l: yabai -m window --resize right:-84:0
